    color: hsl(0, 0%, 48%) !important

.has-link-black-ter
    color: hsl(0, 0%, 14%) !important

@media screen and (max-width: screen-tablet - 1)
    .has-text-centered-mobile
        text-align: center !important
    .is-flex-center-mobile
        justify-content: center !important
    .has-mt-5-mobile
        margin-top: 1em !important

/* ---------------------------------
 *         Font icon fixes
 * --------------------------------- */
.fa, .fab, .fal, .far, .fas
    line-height: inherit

/* ---------------------------------
 *        Fix content elements
 * --------------------------------- */
h1, h2, h3, h4, h5, h6
    font-weight: 600
    margin-top: 2em !important
h1
    font-size: 3em
    margin-top: 0 !important
    span
        display: block
        text-align: center
        margin: 1.6em 0;
    @media screen and (max-width: 768px)
        span
            margin: 1em 0
            font-size: 0.6em
    a
        font-size: 0.6em
    &.index
        font-size: 1.6em !important
h2
    font-size: 2.4em
h3
    font-size: 1.5em !important
    &.menu-label,
    &.tag.is-link
        margin-top: 0 !important 
h4
    font-size: 1.1em !important
h5
    font-size: 1em

.content
    code, pre
        font-size: 0.85em
        font-family: family-mono
    code
        color: hsl(348, 100%, 61%)
        padding: 2px 4px
        border-radius: 4px
        background: #F2F2F2
    blockquote
        footer
            strong + cite
                margin-left: 0.5em

/* ---------------------------------
 *        Fix code highlight
 * --------------------------------- */
figure.highlight
    padding: 0
    width: 100%
    position: relative
    margin: 0.5em 0 1em !important
    overflow: auto
    border-radius: 4px

    pre,
    table tr:hover
        color: inherit
        background: transparent

    table
        width: auto

    pre
        padding: 0
        overflow: auto

        .line
            line-height: 1.5rem

    figcaption,
    .gutter
        background: rgba(200, 200, 200, 0.15)

    figcaption
        padding: .3em .75em
        text-align: left
        font-style: normal
        font-size: .8em

        span
            font-weight: 500
            font-family: family-mono

        a
            float: right
            color: #9a9a9a

    .gutter
        text-align: right

    .tag,
    .title,
    .number,
    .section
        display: inherit
        font: inherit
        margin: inherit
        padding: inherit
        background: inherit
        height: inherit
        text-align: inherit
        vertical-align: inherit
        min-width: inherit
        border-radius: inherit

    .copy
        display: none
        position: absolute
        bottom: 0
        right: 0
        color: white
        background: rgba(0, 0, 0, 0.5)

    &:hover .copy
        display: block
        
    @media screen and (max-width: 768px)
        .copy
            display: none !important

/* ---------------------------------
 *        Fix Gist Snippet
 * --------------------------------- */
.gist
    table
        tr:hover
            background: transparent
        td
            border: none
    .file
        all: initial


